{
  "compilerOptions": {
    "outDir": "dist",
    "lib": [
      "ES2018",
      "dom"
    ],
    "module": "commonjs",
    "target": "ES2018",
    "alwaysStrict": false,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "inlineSources": true,
    "noEmitHelpers": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": true,
    "noImplicitThis": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "strictBindCallApply": false
  },
  "include": [
    "./test/*.ts",
    "jest.config.ts"
  ]
}