{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "comma-dangle": [
      "error",
      {
        "arrays": "only-multiline"
      }
    ],
    "max-classes-per-file": false,
    "no-empty": false,
    "no-floating-promises": true,
    "no-return-await": true,
    "semicolon": [
      true,
      "always"
    ]
  }
}